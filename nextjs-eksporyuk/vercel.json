{
  "buildCommand": "rm -rf .next node_modules/.cache && npx prisma generate --schema=./prisma/schema.prisma && next build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "next dev --port 3000",
  "regions": ["sin1"],
  "build": {
    "env": {
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true",
      "FORCE_REBUILD": "v5-20250625"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,DELETE,PATCH,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/auto-backup",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/backup-to-blob",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/membership-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/product-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/event-reminders",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/learning-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/supplier-reminders",
      "schedule": "0 8 * * *"
    }
  ]
}
