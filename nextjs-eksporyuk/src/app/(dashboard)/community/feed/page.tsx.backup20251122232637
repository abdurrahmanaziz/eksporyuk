      {/* Welcome Section */}
      <div className="bg-gradient-to-r from-blue-600 to-purple-600 border-b">
        <div className="px-6 py-6">
            <div className="flex items-center gap-4">
              <div className="w-16 h-16 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center text-white font-bold text-2xl border-2 border-white/30">
                {session?.user?.name?.charAt(0)?.toUpperCase() || 'D'}
              </div>
              <div className="text-white">
                <h2 className="text-2xl font-bold">Selamat datang, {session?.user?.name || 'User'}! ðŸ‘‹</h2>
                <p className="text-white/90 text-sm mt-1">Bagikan pengalaman dan pelajari hal baru hari ini</p>
              </div>
            </div>
          </div>
        </div>

      {/* Main Content */}
      <div className="p-6">
        <div className="grid grid-cols-1 lg:grid-cols-12 gap-6">
