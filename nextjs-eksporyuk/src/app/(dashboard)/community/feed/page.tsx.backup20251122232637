  const [posting, setPosting] = useState(false)
  const [filterTab, setFilterTab] = useState<'all' | 'trending' | 'following'>('all')
  const [searchQuery, setSearchQuery] = useState('')
  const [joiningGroups, setJoiningGroups] = useState<Record<string, boolean>>({})
  const [followingUsers, setFollowingUsers] = useState<Record<string, boolean>>({})
  const [followingMentors, setFollowingMentors] = useState<Record<string, boolean>>({})

  useEffect(() => {
    fetchPosts()
    fetchSuggestedGroups()
    fetchStories()
    fetchMentors()
    fetchEvents()
    fetchActiveUsers()
  }, [filterTab])

  const fetchStories = async () => {
    try {
      const response = await fetch('/api/community/stories')
      if (response.ok) {
        const data = await response.json()
        if (data.length > 0) {
          // Add "Your Story" as first item
          const userStory = {
            id: 'your-story',
            userName: 'Your Story',
            userAvatar: session?.user?.image || null,
            hasNewStory: false,
          }
          setStories([userStory, ...data])
        }
      }
    } catch (error) {
      console.error('Failed to fetch stories:', error)
    }
  }

  const fetchMentors = async () => {
    try {
      const response = await fetch('/api/community/mentors')
      if (response.ok) {
        const data = await response.json()
        const transformedMentors = data.map((mentor: any) => ({
          id: mentor.id,
          name: mentor.name,
          avatar: mentor.avatar,
          expertise: mentor.title,
          isFollowing: mentor.following || false,
        }))
        setMentors(transformedMentors)
      }
    } catch (error) {
      console.error('Failed to fetch mentors:', error)
    }
  }

  const fetchEvents = async () => {
    try {
      const response = await fetch('/api/community/events/upcoming')
      if (response.ok) {
        const data = await response.json()
        setEvents(data)
      }
    } catch (error) {
      console.error('Failed to fetch events:', error)
    }
  }

  const fetchActiveUsers = async () => {
    try {
      const response = await fetch('/api/community/online-users')
      if (response.ok) {
        const data = await response.json()
        setActiveUsers(data)
      }
    } catch (error) {
      console.error('Failed to fetch active users:', error)
    }
  }

  const fetchPosts = async () => {
    try {
      const response = await fetch(`/api/community/feed?filter=${filterTab}`)
      if (response.ok) {
        const data = await response.json()
        setPosts(data || [])
      }
    } catch (error) {
      console.error('Failed to fetch posts:', error)
    }
  }

  const fetchSuggestedGroups = async () => {
    try {
      const response = await fetch('/api/groups/suggested')
      if (response.ok) {
        const data = await response.json()
        setSuggestedGroups(data || [])
      }
    } catch (error) {
      console.error('Failed to fetch groups:', error)
    }
  }

  const createPost = async () => {
    if (!postContent.trim() || posting) return

    setPosting(true)
    try {
      const response = await fetch('/api/community/posts', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ content: postContent }),
      })

      if (response.ok) {
        setPostContent('')
        fetchPosts()
      }
    } catch (error) {
      console.error('Failed to create post:', error)
    } finally {
      setPosting(false)
    }
  }

  const likePost = async (postId: string) => {
    try {
      const response = await fetch(`/api/posts/${postId}/like`, {
        method: 'POST',
      })

      if (response.ok) {
        fetchPosts()
