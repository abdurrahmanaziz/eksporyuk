    } catch (error) {
      console.error('Failed to like post:', error)
    }
  }

  const joinGroup = async (groupId: string) => {
    setJoiningGroups(prev => ({ ...prev, [groupId]: true }))
    
    try {
      const response = await fetch(`/api/groups/${groupId}/join`, {
        method: 'POST',
      })

      if (response.ok) {
        fetchSuggestedGroups()
      }
    } catch (error) {
      console.error('Failed to join group:', error)
    } finally {
      setJoiningGroups(prev => ({ ...prev, [groupId]: false }))
    }
  }

  const isLikedByUser = (post: Post) => {
    return session?.user?.id && post.likes.some(like => like.userId === session.user.id)
  }

  const toggleFollow = async (userId: string) => {
    setFollowingUsers(prev => ({ ...prev, [userId]: true }))
    
    try {
      const response = await fetch(`/api/users/${userId}/follow`, {
        method: 'POST',
      })
      
      if (response.ok) {
        const data = await response.json()
        setActiveUsers(prev =>
          prev.map(user =>
            user.id === userId ? { ...user, isFollowing: data.isFollowing } : user
          )
        )
      }
    } catch (error) {
      console.error('Failed to follow user:', error)
    } finally {
      setFollowingUsers(prev => ({ ...prev, [userId]: false }))
    }
  }

  const toggleFollowMentor = async (mentorId: string) => {
    setFollowingMentors(prev => ({ ...prev, [mentorId]: true }))
    
    try {
      const response = await fetch(`/api/users/${mentorId}/follow`, {
        method: 'POST',
      })
      
      if (response.ok) {
        const data = await response.json()
        setMentors(prev =>
          prev.map(mentor =>
            mentor.id === mentorId ? { ...mentor, isFollowing: data.isFollowing } : mentor
          )
        )
      }
    } catch (error) {
      console.error('Failed to follow mentor:', error)
    } finally {
      setFollowingMentors(prev => ({ ...prev, [mentorId]: false }))
    }
  }

  const handleChatMentor = (mentorId: string) => {
    // Redirect to chat or open chat modal
    window.location.href = `/messages?userId=${mentorId}`
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Stories Section */}
      <div className="bg-white border-b sticky top-0 z-10">
        <div className="px-6 py-4">
          <div className="flex gap-3 overflow-x-auto scrollbar-hide">
            {stories.map((story, index) => (
              <div key={story.id} className="flex-shrink-0 cursor-pointer group">
                <div className={`relative ${story.hasNewStory ? 'p-[3px] bg-gradient-to-tr from-yellow-400 via-pink-500 to-purple-600 rounded-2xl' : ''}`}>
                  <div className="relative w-24 h-40 rounded-2xl overflow-hidden bg-gradient-to-br from-purple-500 to-pink-500 border-2 border-white">
                    {/* Story Background Image Placeholder */}
                    <div className={`absolute inset-0 ${
                      index === 0 
                        ? 'bg-gradient-to-br from-blue-500 to-blue-600' 
                        : 'bg-gradient-to-br from-purple-500 to-pink-500'
                    }`}>
                      {/* Avatar at top */}
                      <div className="absolute top-3 left-3 w-10 h-10 rounded-full border-2 border-white flex items-center justify-center text-white font-semibold bg-white/20 backdrop-blur-sm">
