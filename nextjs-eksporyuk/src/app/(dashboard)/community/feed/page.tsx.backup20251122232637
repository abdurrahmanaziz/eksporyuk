    {
      id: '1',
      name: 'Sarah Wijaya',
      avatar: null,
      role: 'Export Specialist',
      isFollowing: false,
    },
    {
      id: '2',
      name: 'Budi Santoso',
      avatar: null,
      role: 'Business Coach',
      isFollowing: false,
