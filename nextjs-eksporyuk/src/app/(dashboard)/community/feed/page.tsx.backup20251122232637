  const [suggestedGroups, setSuggestedGroups] = useState<Group[]>([])
  const [mentors, setMentors] = useState<Mentor[]>([
    {
      id: '1',
      name: 'Dr. Sarah Wijaya',
      avatar: null,
      expertise: 'Export Strategy',
      isFollowing: false,
    },
    {
      id: '2',
      name: 'Budi Santoso',
      avatar: null,
      expertise: 'International Trade',
      isFollowing: false,
    },
    {
      id: '3',
      name: 'Rina Kusuma',
      avatar: null,
      expertise: 'Market Research',
      isFollowing: true,
    },
    {
      id: '4',
      name: 'Ahmad Fauzi',
      avatar: null,
      expertise: 'Logistics & Shipping',
      isFollowing: false,
    },
  ])
  const [stories, setStories] = useState<Story[]>([
    { id: '1', userName: 'Your Story', userAvatar: null, hasNewStory: false },
