            <div className="hidden lg:block lg:col-span-2 space-y-6">
              <Card className="p-4 bg-white shadow-sm">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-semibold text-gray-800">Mentor Ekspor Yuk</h3>
                </div>
                <div className="space-y-3">
                  {mentors.map((mentor) => (
                    <div key={mentor.id} className="p-3 border border-gray-200 rounded-lg hover:border-blue-500 transition-colors">
                      <div className="flex items-start gap-3 mb-3">
                        <div className="w-12 h-12 rounded-full bg-gradient-to-br from-orange-500 to-red-500 flex items-center justify-center text-white font-semibold text-lg flex-shrink-0">
                          {mentor.name.charAt(0).toUpperCase()}
                        </div>
                        <div className="flex-1 min-w-0">
