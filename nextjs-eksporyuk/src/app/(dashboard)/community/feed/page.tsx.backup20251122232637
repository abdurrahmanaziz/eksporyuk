                        <div className="flex gap-3">
                          <div className="flex-shrink-0">
                            <div className="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-semibold text-lg">
                              {post.author.name.charAt(0).toUpperCase()}
                            </div>
                          </div>
                          <div>
                            <div className="font-semibold">{post.author.name}</div>
                            <div className="flex items-center gap-2 text-sm text-gray-600">
                              <Link
                                href={`/community/groups/${post.group.slug}`}
                                className="text-blue-600 hover:underline font-medium"
                              >
                                {post.group.name}
                              </Link>
                              <span>â€¢</span>
                              <span>{formatDate(post.createdAt)}</span>
                              <span>â€¢</span>
                              <Globe className="w-3 h-3" />
                            </div>
                          </div>
                        </div>
                        <Button variant="ghost" size="sm">
                          <MoreHorizontal className="w-5 h-5" />
                        </Button>
                      </div>

                      {/* Post Content */}
                      <div className="mt-3">
                        <p className="text-gray-900 whitespace-pre-wrap">{post.content}</p>
                      </div>

                      {post.image && (
                        <div className="mt-3 -mx-4">
                          <img
                            src={post.image}
                            alt="Post image"
                            className="w-full h-auto"
                          />
                        </div>
                      )}

                      {/* Post Stats */}
                      <div className="flex items-center justify-between mt-3 pt-3 border-t text-sm text-gray-600">
                        <div className="flex items-center gap-4">
                          <span>{post._count.likes} suka</span>
                          <span>{post._count.comments} komentar</span>
                        </div>
                      </div>

                      {/* Post Actions */}
                      <div className="flex items-center gap-1 mt-3 pt-3 border-t">
                        <Button
                          variant="ghost"
                          size="sm"
                          className={`flex-1 ${isLikedByUser(post) ? 'text-red-600' : ''}`}
                          onClick={() => likePost(post.id)}
                        >
                          <Heart
                            className={`w-4 h-4 mr-2 ${isLikedByUser(post) ? 'fill-current' : ''}`}
                          />
                          Suka
                        </Button>
                        <Button variant="ghost" size="sm" className="flex-1">
                          <MessageCircle className="w-4 h-4 mr-2" />
                          Komentar
                        </Button>
                        <Button variant="ghost" size="sm" className="flex-1">
                          <Share2 className="w-4 h-4 mr-2" />
                          Bagikan
                        </Button>
                      </div>
                    </div>
                  </Card>
                ))
              )}
            </div>

            {/* Right Sidebar - Hidden on mobile, shown on lg+ */}
            <div className="hidden lg:block lg:col-span-3 space-y-6">
              {/* Suggested Groups */}
              <Card className="p-4 bg-white shadow-sm">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-semibold text-gray-800">Grup yang Disarankan</h3>
                  <Link
                    href="/community/groups"
                    className="text-sm text-blue-600 hover:underline"
                  >
                    Lihat Semua
                  </Link>
                </div>
                <div className="space-y-3">
                  {suggestedGroups.length === 0 ? (
                    <p className="text-sm text-gray-500 text-center py-4">Tidak ada grup yang disarankan</p>
                  ) : (
                    suggestedGroups.slice(0, 3).map((group) => (
                      <div key={group.id} className="flex items-start gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors">
                        <div className="w-12 h-12 rounded-lg bg-gradient-to-br from-green-400 to-blue-500 flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
                          {group.name.charAt(0).toUpperCase()}
                        </div>
                      <div className="flex-1 min-w-0">
                        <div className="font-medium text-sm line-clamp-1">
                          {group.name}
                        </div>
                        <div className="text-xs text-gray-600 mt-0.5">
                          {group._count.members} anggota
                        </div>
                        <Button
                          onClick={() => joinGroup(group.id)}
                          disabled={joiningGroups[group.id]}
                          size="sm"
                          className="mt-2 w-full bg-blue-600 hover:bg-blue-700 text-white"
                        >
                          {joiningGroups[group.id] ? 'Bergabung...' : 'Gabung Grup'}
                        </Button>
                      </div>
                    </div>
                    ))
                  )}
                </div>
              </Card>

              {/* Event/Webinar */}
              <Card className="p-4 bg-white shadow-sm">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-semibold text-gray-800">Event & Webinar</h3>
                  <Link
                    href="/community/events"
                    className="text-sm text-blue-600 hover:underline"
                  >
                    Lihat Semua
                  </Link>
                </div>
                <div className="space-y-3">
                  {events.map((event) => (
                    <div key={event.id} className="p-3 border border-gray-200 rounded-lg hover:border-blue-500 transition-colors cursor-pointer">
                      <h4 className="font-medium text-sm text-gray-800 mb-2 line-clamp-2">
                        {event.title}
                      </h4>
                      <div className="space-y-1.5">
                        <div className="flex items-center gap-2 text-xs text-gray-600">
                          <Calendar className="w-3.5 h-3.5" />
                          <span>{event.date}</span>
                        </div>
                        <div className="flex items-center gap-2 text-xs text-gray-600">
                          <Clock className="w-3.5 h-3.5" />
                          <span>{event.time}</span>
                        </div>
                        <div className="flex items-center gap-2 text-xs text-gray-600">
                          <MapPin className="w-3.5 h-3.5" />
                          <span>{event.location}</span>
                        </div>
                      </div>
                      <div className="mt-2 pt-2 border-t border-gray-100">
                        <div className="flex items-center justify-between">
                          <span className="text-xs text-gray-600">
                            {event.attendees} peserta
                          </span>
                          <Button size="sm" variant="outline" className="h-7 text-xs">
                            Daftar
                          </Button>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </Card>

              {/* Active Users */}
              <Card className="p-4 bg-white shadow-sm">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-semibold text-gray-800">Pengguna Aktif</h3>
                </div>
                <div className="space-y-3">
                  {activeUsers.map((user) => (
                    <div key={user.id} className="flex items-center gap-3">
                      <div className="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-semibold text-sm flex-shrink-0">
                        {user.name.charAt(0).toUpperCase()}
                      </div>
                      <div className="flex-1 min-w-0">
                        <div className="font-medium text-sm text-gray-800 line-clamp-1">
                          {user.name}
                        </div>
                        <div className="text-xs text-gray-600">
                          {user.role}
                        </div>
                      </div>
                      <Button
                        onClick={() => toggleFollow(user.id)}
                        disabled={followingUsers[user.id]}
                        size="sm"
                        variant={user.isFollowing ? "outline" : "default"}
                        className={user.isFollowing ? "" : "bg-blue-600 hover:bg-blue-700"}
                      >
                        <UserPlus className="w-3.5 h-3.5 mr-1" />
                        {user.isFollowing ? 'Mengikuti' : 'Follow'}
                      </Button>
                    </div>
                  ))}
                </div>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </div>
  )
}

