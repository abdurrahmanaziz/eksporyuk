                        <div className="absolute bottom-0 left-0 right-0 p-2 bg-gradient-to-t from-black/60 to-transparent flex items-center justify-center">
                          <div className="w-6 h-6 bg-blue-600 rounded-full border-2 border-white flex items-center justify-center">
                            <span className="text-white text-sm font-bold">+</span>
                          </div>
