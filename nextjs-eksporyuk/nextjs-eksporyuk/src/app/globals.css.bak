@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96.1%;
    --secondary-foreground: 222.2 47.4% 11.2%;
    --muted: 210 40% 96.1%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96.1%;
    --accent-foreground: 222.2 47.4% 11.2%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 221.2 83.2% 53.3%;
    --radius: 0.5rem;
    
    /* Button Colors - These can be overridden by SettingsProvider */
    --button-primary-bg: #3B82F6;
    --button-primary-text: #FFFFFF;
    --button-secondary-bg: #6B7280;
    --button-secondary-text: #FFFFFF;
    --button-success-bg: #10B981;
    --button-success-text: #FFFFFF;
    --button-danger-bg: #EF4444;
    --button-danger-text: #FFFFFF;
    --button-border-radius: 0.5rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 217.2 91.2% 59.8%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 224.3 76.3% 48%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer utilities {
  @keyframes slide-in {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  
  .animate-slide-in {
    animation: slide-in 0.3s ease-out;
    transition: all 0.3s ease-out;
  }

  /* Hide scrollbar */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Full width layout utilities */
  .full-width-container {
    width: 100%;
    max-width: none;
  }

  .content-container {
    width: 100%;
    max-width: 1280px; /* 7xl */
    margin-left: auto;
    margin-right: auto;
  }

  /* Smooth sidebar transitions */
  .sidebar-transition {
    transition: padding-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
}

/* Button Styling from Settings */
@layer components {
  /* Primary Button */
  .btn-primary {
    background-color: var(--button-primary-bg) !important;
    color: var(--button-primary-text) !important;
    border-radius: var(--button-border-radius);
  }
  
  .btn-primary:hover {
    filter: brightness(0.9);
  }
  
  /* Secondary Button */
  .btn-secondary {
    background-color: var(--button-secondary-bg) !important;
    color: var(--button-secondary-text) !important;
    border-radius: var(--button-border-radius);
  }
  
  .btn-secondary:hover {
    filter: brightness(0.9);
  }
  
  /* Success Button */
  .btn-success {
    background-color: var(--button-success-bg) !important;
    color: var(--button-success-text) !important;
    border-radius: var(--button-border-radius);
  }
  
  .btn-success:hover {
    filter: brightness(0.9);
  }
  
  /* Danger Button */
  .btn-danger {
    background-color: var(--button-danger-bg) !important;
    color: var(--button-danger-text) !important;
    border-radius: var(--button-border-radius);
  }
  
  .btn-danger:hover {
    filter: brightness(0.9);
  }

  /* Override all blue button backgrounds to use settings */
  button[class*="bg-blue-5"],
  button[class*="bg-blue-6"],
  a[class*="bg-blue-5"],
  a[class*="bg-blue-6"],
  div[class*="bg-blue-5"]:has(button),
  div[class*="bg-blue-6"]:has(button) {
    background-color: var(--button-primary-bg) !important;
  }

  /* Override button text colors to match settings */
  button[class*="bg-blue-5"],
  button[class*="bg-blue-6"],
  a[class*="bg-blue-5"],
  a[class*="bg-blue-6"] {
    color: var(--button-primary-text) !important;
  }

  /* Override hover states */
  button[class*="bg-blue-5"]:hover,
  button[class*="bg-blue-6"]:hover,
  a[class*="bg-blue-5"]:hover,
  a[class*="bg-blue-6"]:hover {
    filter: brightness(0.9) !important;
    background-color: var(--button-primary-bg) !important;
  }

  /* Override gradient buttons */
  [class*="from-blue-5"],
  [class*="from-blue-6"] {
    background: var(--button-primary-bg) !important;
    background-image: none !important;
    color: var(--button-primary-text) !important;
  }

  /* Fix specific button patterns */
  button.bg-blue-600.text-gray-900,
  button.bg-blue-500.text-gray-900,
  button.bg-blue-600.text-black,
  button.bg-blue-500.text-black {
    color: var(--button-primary-text) !important;
  }
}
